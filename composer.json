{
    "name": "dsantang/domain-events",
    "description": "A simple package that enables creation and caching of domain events.",
    "type": "library",
    "keywords": [
        "domain event",
        "domain driven design",
        "dispatcher"
    ],
    "authors": [
        {
            "name": "Davide Santangelo"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dsantang\\DomainEvents\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dsantang\\DomainEvents\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "require": {
        "php": "^7.2"
    },
    "suggest": {
        "dsantang/domain-events-doctrine": "To automatically dispatch and listen to this package's domain events when a doctrine transaction is finished."
    },
    "require-dev": {
        "doctrine/coding-standard": "^9",
        "infection/infection": "^0.25",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.3"
    }
}
